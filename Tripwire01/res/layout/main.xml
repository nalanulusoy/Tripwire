<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clickable="true"
              android:focusable="true"
              android:weightSum="1"
              android:textStyle="bold">
    <EditText android:id="@+id/inputSearch"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint=""
              android:imeOptions="actionSearch"
              android:drawableLeft="@drawable/search"
              android:inputType="textVisiblePassword"
              android:visibility="gone"

            />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/black"
            android:text="@string/geri"
            android:id="@+id/button_geri" android:layout_gravity="right"
            android:drawableLeft="@drawable/back"/>
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@android:id/list"
              android:layout_width="match_parent"
              android:layout_height="0dp" android:layout_weight="1.00"  android:drawSelectorOnTop="false"  />
    <TextView android:layout_width="match_parent" android:id="@+id/selection" android:layout_height="0dp"
            />






</LinearLayout>